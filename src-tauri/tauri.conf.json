{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "BEAR AI LLM",
  "version": "1.0.13",
  "identifier": "com.legalai.assistant",
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist",
    "devUrl": "http://localhost:1420"
  },
  "app": {
    "windows": [
      {
        "title": "BEAR AI LLM",
        "width": 1400,
        "height": 900,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "center": true,
        "decorations": true,
        "titleBarStyle": "Overlay"
      }
    ],
    "security": {
      "csp": "default-src 'self'; img-src 'self' asset: https://asset.localhost blob: data:; style-src 'self' 'unsafe-inline'; script-src 'self'; font-src 'self' asset: https://asset.localhost; connect-src 'self'; object-src 'none'; base-uri 'self'; form-action 'self'"
    },
    "trayIcon": {
      "iconPath": "icons/icon.png",
      "iconAsTemplate": true
    }
  },
  "bundle": {
    "active": true,
    "targets": ["msi", "nsis"],
    "createUpdaterArtifacts": true,
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/256x256.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": ["WebView2Loader.dll"],
    "copyright": "Â© 2025 Ernst van Gassen",
    "category": "DeveloperTool",
    "shortDescription": "Secure AI Assistant for Legal Professionals",
    "longDescription": "A private, secure AI assistant designed specifically for lawyers and legal professionals, with local processing and PII protection.",
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": "",
      "webviewInstallMode": {
        "type": "downloadBootstrapper",
        "silent": true
      },
      "wix": {
        "language": "en-US"
      }
    }
  },
  "plugins": {
    "fs": {
      "requireLiteralLeadingDot": true
    },
    "updater": {
      "active": true,
      "endpoints": [
        "https://gist.githubusercontent.com/KingOfTheAce2/8d0ff641211fe9bd13a9179225453aa6/raw/bear-ai-latest.json"
      ],
      "dialog": true,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDQwOEU0NzhFOEQzQUI5NTEKUldSUnVUcU5qa2VPUUtOUU1ZWUtlWnl1RlhDSHRPMWVaTVB4L2I2MDN0UlN0aG5ybXZ1WUYzZ1kK",
      "windows": {
        "installMode": "passive"
      }
    }
  }
}